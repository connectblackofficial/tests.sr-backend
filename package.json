{
  "name": "wallet-test",
  "version": "1.0.0",
  "description": "test project to validate knowledge about a micro application that supports multiple requests",
  "main": "src/main.ts",
  "repository": "git@github.com:limma/core-event-store-test.git",
  "author": "Gabriel Lima <gabriel@gabriellima.com>",
  "license": "MIT",
  "engines": {
    "node": ">=18.16.0"
  },
  "scripts": {
    "lint": "eslint --ext .ts src/",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "test": "NODE_ENV=test jest",
    "test:cov": "NODE_ENV=test jest --coverage",
    "start:dev": "rimraf ./dist && tsc-watch -p tsconfig.build.json --onSuccess \"nodemon --inspect=0.0.0.0 ./dist/main.js\"",
    "start:prod": "node ./dist/main.js",
    "build": "rimraf ./dist && tsc -p tsconfig.build.json"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "cron": "^3.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-asyncify": "^2.1.2",
    "express-rate-limit": "^7.1.1",
    "helmet": "^7.0.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "mysql2": "^3.6.2",
    "redis": "^4.6.10",
    "reflect-metadata": "^0.1.13",
    "slugify": "^1.6.6",
    "typeorm": "^0.3.17",
    "utility-types": "^3.10.0",
    "winston": "^3.11.0",
    "xss": "^1.0.14",
    "yup": "^1.3.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.3",
    "@types/cors": "^2.8.14",
    "@types/express": "^4.17.19",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.4",
    "@types/node": "^20.8.6",
    "@types/supertest": "^2.0.14",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "prettier-eslint": "^16.1.1",
    "rimraf": "^5.0.5",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "tsc-watch": "^6.0.4",
    "typescript": "^5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "clearMocks": true,
    "coverageDirectory": "./coverage",
    "coverageProvider": "v8",
    "testTimeout": 20000,
    "rootDir": "./",
    "transform": {
      "^.+\\.spec.(ts|tsx)?$": "ts-jest"
    }
  }
}
